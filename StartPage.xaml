<Page
    x:Class="Battleship.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battleship"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Battleship" TextWrapping="Wrap" FontSize="100" FontFamily="Segoe UI Semi Bold" Grid.ColumnSpan="2"/>
        <Button Grid.Row="0" Content="How to Play" VerticalAlignment="Stretch" HorizontalAlignment="Left" FontSize="45" FontFamily="SegoeUISemibold" Height="150" Margin="20, 0, 0, 0"/>
        <Button Name="Stop" Grid.Row="0" Click="Stop_Click" Content="X" VerticalAlignment="Stretch" HorizontalAlignment="Right" FontSize="80" FontFamily="SegoeUISemibold" Height="150" Margin="0, 0, 20,0" Width="{Binding ActualHeight, ElementName=Stop, Mode=OneWay}"/>
        <Grid x:Name="LevelsGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Name="Size4" Click="Size4_Click"  Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="400" Height="{Binding ActualWidth, ElementName=Size4, Mode=OneWay}" FontSize="80" FontFamily="SegoeUISemibold" Content="4 x 4"/>
            <Button Name="Size5" Click="Size5_Click" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="400" Height="{Binding ActualWidth, ElementName=Size5, Mode=OneWay}" FontSize="80" FontFamily="SegoeUISemibold" Content="5 x 5"/>
            <Button Name="Size6" Click="Size6_Click" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="400" Height="{Binding ActualWidth, ElementName=Size6, Mode=OneWay}" FontSize="80" FontFamily="SegoeUISemibold" Content="6 x 6"/>
        </Grid>
        <TextBlock Text="Select a Size" Grid.Row="2" FontSize="55" FontFamily="SegoeUISemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

    </Grid>
</Page>